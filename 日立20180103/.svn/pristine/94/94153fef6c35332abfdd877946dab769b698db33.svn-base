function combo_readonly(a) {
    var $ipt = $("#sdbo001_input input").not("#bo00102").not("#bo00103");
    $ipt.each(function (i) {
        var ipt_id = $(this).attr("id");
        try {
            if (ipt_id.length == 7) {
                $("#" + ipt_id + "").combo('readonly', a);
            }
        } catch (e) {
        }
    });
    $("#bo00102").combo('readonly', true);
    $("#bo00102").combo('readonly', true);
}





