                        for (var x = 0; x < query.Count(); x++)
                        {
                            szrl121 _121model = new szrl121();
                            if (x == 0)
                            {
                                //今回検収
                                _121model.rl12101 = Guid.NewGuid().ToString();
                                _121model.rl12102 = 1;
                                _121model.rl12103 = query[x].rl10707;
