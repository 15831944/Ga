                                _121model.rl12101 = query[x].rl12101;
                                _121model.rl12102 = query[x].rl12102;
                                _121model.rl12103 = query[x].rl12103;
                                _121model.rl12104 = query[x].rl12104;
                                _121model.rl12105 = query[x].rl12105;
